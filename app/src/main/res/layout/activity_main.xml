<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button0"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/result"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="1"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button4"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="2"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/button3"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="3"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintEnd_toStartOf="@id/add"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="4"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button7"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="5"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button2"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@id/button6"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="6"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintEnd_toStartOf="@id/sub"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="7"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/clear"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="8"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintTop_toBottomOf="@id/square"
        app:layout_constraintEnd_toStartOf="@id/button9"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="9"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/minus"
        app:layout_constraintEnd_toStartOf="@id/mul"/>

    <Button
        android:id="@+id/result"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="="
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add"/>

    <Button
        android:id="@+id/add"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="+"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub"/>

    <Button
        android:id="@+id/sub"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="-"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/add"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mul"/>

    <Button
        android:id="@+id/mul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="*"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/sub"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div"/>

    <Button
        android:id="@+id/div"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="/"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/mul"
        app:layout_constraintStart_toEndOf="@id/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num"/>

    <Button
        android:id="@+id/clear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="C"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/square"
        app:layout_constraintTop_toBottomOf="@id/num"/>

    <Button
        android:id="@+id/square"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="^"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/button8"
        app:layout_constraintStart_toEndOf="@id/clear"
        app:layout_constraintTop_toBottomOf="@id/num"
        app:layout_constraintEnd_toStartOf="@id/minus"/>

    <Button
        android:id="@+id/minus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="#009688"
        android:text="-/+"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/square"
        app:layout_constraintTop_toBottomOf="@id/num"
        app:layout_constraintEnd_toStartOf="@id/div"/>

    <TextView
        android:id="@+id/num"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="70dp"
        android:gravity="right"
        app:layout_constraintBottom_toTopOf="@id/clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>